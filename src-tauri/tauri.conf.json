{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "souon-editor",
  "version": "0.2.1",
  "identifier": "com.kemoshumai.souon-editor",
  "build": {
    "beforeDevCommand": "bun run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "bun run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "souon-editor",
        "width": 1200,
        "height": 600
      }
    ],
    "security": {
      "csp": "default-src 'self' ipc: http://ipc.localhost; style-src 'self' 'unsafe-inline' https://fonts.googleapis.com; font-src 'self' https://fonts.gstatic.com; img-src 'self' http://asset.localhost data:; media-src 'self' http://asset.localhost data:; connect-src 'self' http://asset.localhost http://ipc.localhost data:;",
      "assetProtocol": {
        "enable": true,
        "scope": ["**"]
      }
    }
  },
  "bundle": {
    "active": true,
    "targets": "nsis",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "fileAssociations": [
      {
        "ext": ["sof"],
        "name": "SouonOngakuFile",
        "description": "Souon Editor Music File",
        "role": "Editor"
      }
    ],
    "windows": {
      "allowDowngrades": true,
      "certificateThumbprint": null,
      "digestAlgorithm": null,
      "nsis": {
        "languages": ["Japanese","English"],
        "template": "nsis/installer.nsi"
      },
      "signCommand": null,
      "timestampUrl": null,
      "tsp": false,
      "webviewInstallMode": {
        "silent": true,
        "type": "downloadBootstrapper"
      },
      "wix": null
    },
    "createUpdaterArtifacts": true
  },
  "plugins": {
    "updater": {
      "endpoints": [
        "https://github.com/kemoshumai/souon-editor/releases/latest/download/latest.json"
      ],
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IEQxNzI2OUVGOTM0MzBGRkIKUldUN0QwT1Q3Mmx5MGY5STJwQTh6eGNZekMwVEN6dnlvS0ZlaGZ3QVRCeXBodmxzamlPVmwySEwK"
    }
  }
}
