{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": [
    "main"
  ],
  "permissions": [
    "core:default",
    "opener:default",
    "shell:allow-open",
    "dialog:default",
    "dialog:allow-open",
    "dialog:allow-save",
    "fs:scope-applocaldata",
    "fs:allow-copy-file",
    "fs:write-all",
    "fs:allow-applocaldata-write-recursive",
    "fs:read-all",
    "fs:allow-applocaldata-read-recursive",
    "log:default"
  ]
}